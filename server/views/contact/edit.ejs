<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Edit Page -->

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
        <h3><%= title %></h1>
        <form class="form" method="POST">
        <div class="form-group">
            <label for="nameTextField">Name</label>
            <input type="text" class="form-control"
            id="nameTextField"
            placeholder="Enter the Contact Name"
            name="name"
            value="<%= contact.name %>" required>
        </div>

        <div class="form-group">
            <label for="emailTextField">Email</label>
            <input type="email" class="form-control"
            id="emailTextField"
            placeholder="Enter the Contact's Email"
            name="email"
            value="<%= contact.email %>"  required>
        </div>

        <div class="form-group">
            <label for="phoneTextField"></label>
            <input type="text" class="form-control"
            id="phoneTextField"
            placeholder="Enter the Contact's Phone Number"
            name="phone"
             value="<%= contact.phone %>" required>
        </div>

        </div>

        <div class="form-group">
            <label for="companyTextField"></label>
            <input type="text" class="form-control"
            id="companyTextField"
            placeholder="Enter the Contacts's Company"
            name="company" 
             value="<%= contact.company %>" required>
        </div>

        <button class="btn btn-primary" type="submit">
            <i class="fas fa-edit"></i> Submit</button>

            <a href="/book-list" class="btn btn-warning">
                <i class="fas fa-undo"></i>Cancel</a>
             </form>
            </div>

    </div>
</div>

<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>